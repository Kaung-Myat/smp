<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../common/links.ejs')  %>
</head>
<body>
    <div class="container">
        <main class="container">
            <div class="text-center mt-5">
                <h3>Admin Login</h3>
                <h5 class="mt-3">Welcome Admin! Login with your credentials</h5>
            </div>
            <div class="row w-75 m-auto mt-5">
                <div class="col-md-6 col-12 mx-auto">
                    <form id="loginForm">
                        <div class="form-floating mb-5">
                            <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com" required>
                            <label for="floatingInput">Email address</label>
                        </div>
                        <div class="form-floating">
                            <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password" required>
                            <label for="floatingPassword">Password</label>
                        </div>
                        <div class="d-flex align-items-center flex-column mt-5 mb-3">
                            <input type="submit" class="btn w-75 fs-5 rounded-5" style="background-color: #5B7C99;color: white;" value="Login">
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
    
    <%- include('../../common/script.ejs') %>
    <script src="/javascripts/admin.auth.js"></script>
</body>
</html>